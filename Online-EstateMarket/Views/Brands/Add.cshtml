@model AddBrandDto

<div class="row mt-5">
    <div class="col-md-6">
        <form asp-controller="brands" asp-action="add" enctype="multipart/form-data">
            <div class="card mb-4" style="margin: 0px !important; padding: 0px !important">
                <h5 class="card-header">New Brand</h5>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="defaultFormControlInput" class="form-label">Name</label>
                        <input asp-for="Name"
                               type="text"
                               class="form-control"
                               id="defaultFormControlInput"
                               aria-describedby="defaultFormControlHelp" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Image</label>
                        <input asp-for="File" class="form-control" type="file" id="formFile" />
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center form-links">
                        <a asp-controller="brands" asp-action="index" class="me-2 btn btn-gray">Cencel</a>

                        <button type="submit" class="btn btn-primary">
                            Save
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>